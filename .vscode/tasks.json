{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Full Build",
            "dependsOn": [
                "Backends Builds",
                "Frontends Builds"
            ]
        },
        {
            "label": "Krz.FullstackTemplate.Backend.Core Start",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "API"
            ],
            "options": {
                "cwd": "FullstackTemplate\\Krz.FullstackTemplate.Backends\\Krz.FullstackTemplate.Backend.Core"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Contractor.CLI Test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "test"
            ],
            "options": {
                "cwd": "Contractor.CLI"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Krz.FullstackTemplate.Web.Core Start",
            "type": "shell",
            "command": "npm start",
            "options": {
                "cwd": "FullstackTemplate\\Krz.FullstackTemplate.Frontends\\Krz.FullstackTemplate.Web.Core"
            }
        }
    ]
}